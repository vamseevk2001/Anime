<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/promos"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/topLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top Rated"
        android:layout_marginTop="4dp"
        android:layout_marginStart="5dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        app:layout_constraintTop_toBottomOf="@id/promos"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topRated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLbl" />

    <TextView
        android:id="@+id/trendingLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trending Now"
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topRated"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trendingNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trendingLbl" />

    <TextView
        android:id="@+id/moviesLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top anime movies"
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trendingNow"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topMovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/moviesLbl" />

    <TextView
        android:id="@+id/upcomingLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top upcoming animes"
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topMovies"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topUpcoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upcomingLbl" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>