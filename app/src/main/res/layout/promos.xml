<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/promoImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/animeNamePromo"
        android:background="@drawable/poster_image_gradient" />

    <TextView
        android:id="@+id/animeNamePromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="@id/trailer"
        app:layout_constraintBottom_toTopOf="@id/trailer"
        android:layout_marginBottom="10dp"
        android:text="Naruto: shippuden"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        />



    <androidx.cardview.widget.CardView
        android:id="@+id/trailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:cardBackgroundColor="#454543"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        >

        <TextView
            android:id="@+id/animePromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="Play"
            android:textSize="18sp"
            android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/watchlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:cardBackgroundColor="#454543"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/trailer"
        app:layout_constraintStart_toEndOf="@id/trailer">

        <TextView
            android:id="@+id/addToWatchlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_baseline_playlist_add_24"
            android:text=" Add to watchlist"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>